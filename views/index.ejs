<% include ./partials/header %>



<div class="ui main text container">
    <div class="row" id="page-header">
        <div class="ui basic segment" style="padding-left: 0;">
            <h1 class="ui sub header">
                <span class="logo-line-before">
                    <i class="bf" style="left: 100%;"></i>
                </span>
                <span class="ttl" style="opacity:0; padding-left: 25px;"> Your data corner </span>
                <span class="logo-line-after">
                    <i class="af" style="right:100%;"></i>
                </span>
            </h1>
           
        </div>
    </div>
    <div class="ui top vertical segment mmn5" style="opacity:0;">
        
            <% if(error && error.length > 0) { %>
            <div class="ui negative message">
                <div class="header">
                    <%=error%>
                </div>      
            </div>
            <% } %>
        
        <div class="ui divided items">
        
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%=blog.image%>">
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%=blog._id%>"><%=blog.title%></a>
                        <div class="meta">
                            <span><%=blog.created.toDateString()%></span>
                        </div>
                        <div class="description">
                            <p><%-blog.desc%></p>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/blogs/<%=blog._id%>">
                                Read More
                                <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </div>
                    <h2></h2>
                </div>
            <% }) %>    
        </div>
    </div>
    
    
    
    <div class="row">
    <% if (pages && pages > 0) { %>
    <div class="ui pagination menu">
        <% if (current == 1) { %>
        <div class="disabled item">First</div>
        <% } else { %>
        <a class="item" href="/blogs<%if(search){%>?search=<%=search%><%}%>">First</a>
        <% } %>
 
        <% if (current == 1) { %>
        <div class="disabled item">«</div>
        <% } else { %>
        <a class="item" href="/blogs?page=<%= Number(current) - 1 %><%if(search){%>&search=<%=search%><%}%>">«</a>
        <% } %>
 
        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
        <% if (i !== 1) { %>
        <div class="disabled item">...</div>
        <% } %>
        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
        <% if (i == current) { %>
        <a class="item active"><%= i %></a>
        <% } else { %>
        <a class="item" href="/blogs?page=<%= i %><%if(search){%>&search=<%=search%><%}%>"><%= i %></a>
        <% } %>
        <% if (i == Number(current) + 4 && i < pages) { %>
        <div class="disabled item">...</div>
        <% } %>
        <% } %>
 
        <% if (current == pages) { %>
        <div class="disabled item">»</div>
        <% } else { %>
        <a class="item" href="/blogs?page=<%= Number(current) + 1 %><%if(search){%>&search=<%=search%><%}%>">»</a>
        <% } %>
 
        <% if (current == pages) { %>
        <div class="disabled item">Last</div>
        <% } else { %>
        <a class="item" href="/blogs?page=<%= pages %><%if(search){%>&search=<%=search%><%}%>">Last</a>
        <% } %>
    
    <% } %>
    </div>
</div>



<% include ./partials/footer %>