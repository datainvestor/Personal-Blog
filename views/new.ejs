<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Blog about data</div>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="title">
        </div>
         <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="image">
        </div>
        <div class="field">
            <label>Desc</label>
            <input type="text" name="blog[desc]" placeholder="desc">
        </div>
         <div class="field">
            <label>Content</label>
            <textarea name="blog[body]"></textarea>
        </div>
        <input class="ui blue basic button" type="submit">
    </form>
</div>
